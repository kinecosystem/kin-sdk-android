<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/disable</item>
        <item name="colorAccent">@color/kinBlue</item>
    </style>

    <style name="AppTheme.Test" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/kinBlue</item>
        <item name="colorPrimaryDark">@color/kinBlueSelected</item>
        <item name="colorAccent">@color/kinOrange</item>
    </style>

    <style name="AppTheme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/kinOrange</item>
        <item name="colorPrimaryDark">@color/kinOrangeSelected</item>
        <item name="colorAccent">@color/kinBlue</item>
    </style>

    <style name="KinButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="KinButtonStyle.TestNet">
        <item name="android:background">@drawable/button_test_network_bg</item>
    </style>

    <style name="KinButtonStyle.Red">
        <item name="android:background">@drawable/button_red_bg</item>
    </style>

    <style name="KinButtonStyle.MainNet">
        <item name="android:background">@drawable/button_main_network_bg</item>
    </style>

    <style name="KinText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="KinText.Title" >
        <item name="android:selectable">false</item>
    </style>

    <style name="KinText.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KinSwitch">
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_color</item>
    </style>

</resources>
