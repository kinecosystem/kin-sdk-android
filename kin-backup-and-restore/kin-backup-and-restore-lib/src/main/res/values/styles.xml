<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackupAndRestoreNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BackupAndRestoreToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Enable clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>

    </style>
    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="BackupAndRestoreToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/backup_and_restore_toolbar_text_size</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/backup_and_restore_black</item>
    </style>

    <style name="BackupAndRestoreAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/BackupAndRestoreDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/BackupAndRestoreDialogButtonStyle</item>
    </style>

    <style name="BackupAndRestoreDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/backup_and_restore_purple_blue</item>
    </style>

    <style name="BackupAndRestoreAlertDialogTitleText">
        <item name="android:textColor">@color/backup_and_restore_black</item>
        <item name="android:textSize">@dimen/backup_and_restore_large_size</item>
        <item name="android:fontFamily">@font/work_sans_semi_bold</item>
    </style>

    <style name="BackupAndRestoreAlertDialogMessageText">
        <item name="android:textColor">@color/backup_and_restore_dialog_message_gray</item>
        <item name="android:textSize">@dimen/backup_and_restore_regular_size</item>
        <item name="android:fontFamily">@font/work_sans_regular</item>
    </style>

    <style name="BackupAndRestoreTitleBase">
        <item name="android:textColor">@color/backup_and_restore_black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/work_sans_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BackupAndRestoreTitle" parent="BackupAndRestoreTitleBase">
        <item name="android:textSize">@dimen/backup_and_restore_regular_size</item>
    </style>

    <style name="BackupAndRestoreTitleSmall" parent="BackupAndRestoreTitleBase">
        <item name="android:textColor">@color/backup_and_restore_black</item>
        <item name="android:textSize">@dimen/backup_and_restore_small_size</item>
    </style>

    <style name="BackupAndRestoreTitleLargeBold" parent="BackupAndRestoreTitleBase">
        <item name="android:textSize">@dimen/backup_and_restore_large_size</item>
        <item name="android:fontFamily">@font/work_sans_semi_bold</item>
    </style>

    <style name="BackupAndRestoreButton" parent="BackupAndRestoreTitleBase">
        <item name="android:textSize">@dimen/backup_and_restore_btn_text_size</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BackupAndRestoreCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/backup_and_restore_black</item>
        <item name="colorControlActivated">@color/backup_and_restore_purple_blue</item>
    </style>

</resources>